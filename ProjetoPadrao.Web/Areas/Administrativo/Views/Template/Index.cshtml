@model IEnumerable<ProjetoPadrao.Dados.Entidades.Template>

@{
    ViewBag.Title = "Templates";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Adicionar template", "Novo")
</p>
<table class="table">
    <tr>
        <th>ID do Template</th>
        <th>Nome</th>
        <th>Alias</th>
        <th>Conteúdo dinâmico</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdTemplate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alias)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParseHTML)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id = item.IdTemplate }) |
            @Html.ActionLink("Excluir", "Excluir", new { id = item.IdTemplate })
        </td>
    </tr>
}

</table>
